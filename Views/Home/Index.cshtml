<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
@using MovieList.Models
@model List<Movie>
@{
    ViewData["Title"] = "My Movies";
} 
<div class="mb-2">
    <a asp-controller="Movie" asp-action="Add" class="btn btn-primary">Add New Movie</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Year</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.Rating</td>
                <td>
                    <a asp-controller="Movie" asp-action="Edit" 
                    asp-route-id="@movie.MovieId" 
                       class="btn btn-warning">Edit</a>

                    <a asp-controller="Movie" asp-action="Delete" 
                    asp-route-id="@movie.MovieId"
                       class="btn btn-warning">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table> 